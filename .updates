# SET OWNERSHIP PERMISSIONS FOR BREW CELLAR
echo "Now fixing ownership rights for Homebrew packages..."
sudo chown -R ${USER} /usr/local
echo -ne '#####                     (33%)\r'
sleep 1
echo -ne '#############             (66%)\r'
sleep 1
echo -ne '#######################   (100%)\r'
echo -ne '\n'

# BREW UPDATES
echo "Now updating Homebrew packages..."
source ~/.brew
echo -ne '#####                     (33%)\r'
sleep 1
echo -ne '#############             (66%)\r'
sleep 1
echo -ne '#######################   (100%)\r'
echo -ne '\n'

# METEOR UPDATES
echo "Updating Meteor package catalogs..."
meteor update
echo -ne '#####                     (33%)\r'
sleep 1
echo -ne '#############             (66%)\r'
sleep 1
echo -ne '#######################   (100%)\r'
echo -ne '\n'

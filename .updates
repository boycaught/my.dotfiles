# SET OWNERSHIP PERMISSIONS FOR BREW CELLAR
echo -ne 'Now fixing ownership rights for Homebrew packages...                                     \n'
sudo chown -R ${USER} /usr/local
echo -ne 'Fixing ownership rights for Homebrew packages... #####                          (33%)\r'
sleep 1 
echo -ne 'Fixing ownership rights for Homebrew packages... #############                  (66%)\r'
sleep 1 
echo -ne 'Fixing ownership rights for Homebrew packages... #######################       (100%)\r'
echo -ne '\n\n'
sleep 2

# BREW UPDATES
echo -ne 'Now updating Homebrew packages...                                                        \n'
source ~/.brew
echo -ne 'Updating Homebrew packages... #####                                             (33%)\r'
sleep 1
echo -ne 'Updating Homebrew packages... #############                                     (66%)\r'
sleep 1
echo -ne 'Updating Homebrew packages... #######################                          (100%)\r'
echo -ne '\n\n'
sleep 2

# METEOR UPDATES
echo -ne 'Now updating Meteor package catalogs...                                                  \n'
meteor update
echo -ne 'Updating Meteor package catalogs... #####                                       (33%)\r'
sleep 1
echo -ne 'Updating Meteor package catalogs... #############                               (66%)\r'
sleep 1
echo -ne 'Updating Meteor package catalogs... #######################                    (100%)\r'
echo -ne '\n\n'
sleep 2

# GITHUB SYNCS
echo -ne 'Now syncing PUBLIC GITHUB repo...                                                        \n'
git -C ~/dotfiles/ pull
echo -ne 'Syncing PUBLIC GITHUB repo... #####                                             (33%)\r'
sleep 1
echo -ne 'Syncing PUBLIC GITHUB repo... #############                                     (66%)\r'
sleep 1
echo -ne 'Syncing PUBLIC GITHUB repo... #######################                          (100%)\r'
sleep 1
echo -ne '\n\n'
sleep 2

echo -ne 'Now syncing PRIVATE GITHUB repo...                                                       \n'
sudo git -C /etc/profile.d/ pull
echo -ne 'Syncing PRIVATE GITHUB repo... #####                                            (33%)\r'
sleep 1
echo -ne 'Syncing PRIVATE GITHUB repo... #############                                    (66%)\r'
sleep 1
echo -ne 'Syncing PRIVATE GITHUB repo... #######################                         (100%)\r'
echo -ne '\n'

# SET OWNERSHIP PERMISSIONS FOR BREW CELLAR
echo "Now fixing ownership rights for Homebrew packages..."
sudo chown -R ${USER} /usr/local
sleep 1
echo -ne 'Now fixing ownership rights for Homebrew packages... #####                     (33%)\r'
sleep 1 
echo -ne 'Now fixing ownership rights for Homebrew packages... #############             (66%)\r'
sleep 1 
echo -ne 'Now fixing ownership rights for Homebrew packages... #######################   (100%)\r'
echo -ne '\n'

# BREW UPDATES
echo "Now updating Homebrew packages..."
source ~/.brew
sleep 1
echo -ne 'Now updating Homebrew packages... #####                     (33%)\r'
sleep 1
echo -ne 'Now updating Homebrew packages... #############             (66%)\r'
sleep 1
echo -ne 'Now updating Homebrew packages... #######################   (100%)\r'
echo -ne '\n'

# METEOR UPDATES
echo "Updating Meteor package catalogs..."
meteor update
sleep 1
echo -ne 'Updating Meteor package catalogs... #####                     (33%)\r'
sleep 1
echo -ne 'Updating Meteor package catalogs... #############             (66%)\r'
sleep 1
echo -ne 'Updating Meteor package catalogs... #######################   (100%)\r'
echo -ne '\n'

# GITHUB SYNCS
echo "Syncing GITHUB repo..."
git -C ~/dotfiles/ pull
sleep 1
echo -ne 'Syncing GITHUB repo... #####                     (33%)\r'
sleep 1
echo -ne 'Syncing GITHUB repo... #############             (66%)\r'
sleep 1
echo -ne 'Syncing GITHUB repo... #######################   (100%)\r'
echo -ne '\n'
echo "Syncing private GITHUB repo..."
sudo git -C /etc/profile.d/ pull
sleep 1
echo -ne 'Syncing private GITHUB repo... #####                     (33%)\r'
sleep 1
echo -ne 'Syncing private GITHUB repo... #############             (66%)\r'
sleep 1
echo -ne 'Syncing private GITHUB repo... #######################   (100%)\r'
echo -ne '\n'

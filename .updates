# ---------------------------------------------------------------------------------------------- 
# REQUEST PASSWORD UPFRONT
sudo -v

# ---------------------------------------------------------------------------------------------- 
# SET OWNERSHIP PERMISSIONS FOR BREW CELLAR
sudo chown -R ${USER} /usr/local
echo -ne 'Now fixing ownership rights for Homebrew packages...                                      \n'

# ---------------------------------------------------------------------------------------------- 
# BREW UPDATES
# set counter to 0 
counter=0
(
# set infinite while loop
while :
do
source ~/.brew
# increase counter by 10
(( counter+=10 ))
[ $counter -eq 100 ] && break
# delay it a specified amount of time i.e 1 sec
sleep 1
done
) |
dialog --title "Updating Homebrew packages..." --gauge 7 70 0
echo -ne '\n\n'
sleep 2


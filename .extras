## SSH to Alternative DEV boxes
alias get_honeyfish='ssh ${VM_HONEYFISH}'
alias get_silversurfer='ssh ${VM_SILVERSURFER}'
alias get_linode='ssh ${VM_LINODE}'
alias get_racknerd='ssh ${VM_RACKNERD}'
alias get_etherserver1='ssh ${VM_ETHERSERVER1}'
alias get_etherserver2='ssh ${VM_ETHERSERVER2}'
alias get_massivetuna='ssh -p 12121 ${VM_MASSIVETUNA}'
alias get_unannounced='ssh -p 10221 ${VM_UNANNOUNCED}'
alias get_readracer='ssh -p 13921 ${VM_READRACER}'

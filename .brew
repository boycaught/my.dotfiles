#!/bin/bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

# Install more recent versions of some OS X tools
# brew tap homebrew/dupes
# brew install homebrew/dupes/grep
brew tap homebrew/php

# Install everything else
brew install ack
brew install git
brew install rename
brew install tree
brew install dockutil

# Cask applications
# Favorites
# Only do --force updates on Weekends (Saturday or Sunday)
dateholder=$(date)
packages=( 
	adium 
	atom 
	brave 
	codekit 
	cyberduck 
	docker 
	electron  
	gimp 
	handbrake 
	inkscape 
	kitematic 
	mongotron 
	sqlectron 
	vagrant-manager 
	visual-studio-code 
	vlc 
)
if [ ${dateholder:0:3} == 'Sat' ] || [ ${dateholder:0:3} == 'Sun' ] ; then
	echo "Weekend: it is now time to force Cask updates."
	for i in "${packages[@]}"
	do
		brew cask install $i
	done
else
	echo "${dateholder:0:3}: Casks will checked for updates on Saturday or Sunday."
fi

# Optional for new (cask) installs
	#alfred
	#appzapper
	#docker-toolbox
	#dropbox
	#caffeine
	#iterm2
	#profilemanager
	#sublime-text
	#xquartz 
	#contexts 
	#path-finder 
	#telegram 
	#webstorm
	#virtualbox
	#vagrant
	#nodeclipse

# Remove outdated versions from the cellar
brew cleanup

#!/bin/bash

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Donâ€™t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash
brew install bash

# Install wget
brew install wget

# Install everything else
brew install ack
brew install git
brew install rename
brew install tree
brew install dockutil

# Cask applications
# Favorites
# Only do --force updates on Weekends (Saturday or Sunday)
dateholder=$(date)
if [ ${dateholder:0:3} == 'Sat' ] || [ ${dateholder:0:3} == 'Sun' ] ; then
	echo "Weekend: it is now time to force Cask updates."
	brew cask upgrade
else
	echo "${dateholder:0:3}: Casks will checked for updates on Saturday or Sunday."
fi

# Remove outdated versions from the cellar
brew cleanup
